<persistence xmlns="http://java.sun.com/xm/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:location="http://java.sun.com/xm/ns/persistence 
			 http://java.sun.com/xm/ns/persistence/persistence_2_0.xsd"
			 version="2.0">
	<persistence-unit name="multiModules-pu">
		<properties>
			<property name="hibernate.archive.autodetection" value="class"/>
			<property name="hibernate.format.sql" value="true"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/multiModules"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
		</properties>
	</persistence-unit>
</persistence>